{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "allowJs": true,
        "strict": false,
        "noImplicitAny": false,
        "strictNullChecks": false,// 解决null问题
        "esModuleInterop": true,
        "experimentalDecorators":true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "downlevelIteration": true,
        "lib": ["WebWorker", "DOM", "ES6"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
        },
        "removeComments": true,
    },
    "include": [
        "src/**/*",
        "@types/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}
